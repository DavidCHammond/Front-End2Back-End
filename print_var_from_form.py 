from airflow.operators.dummy_operator import DummyOperator
from airflow.operators.python_operator import PythonOperator
from datetime import datetime, timedelta
from airflow import DAG
from print_var_func import print_var


default_args = {
    'owner': 'David',
    'depends_on_past': False,
    'start_date': datetime(2020, 7, 15),
    'retries': 1,
    'retry_delay': timedelta(minutes=0),
    'provide_context': True,
    'catchup': False,
    'dag_concurrency': 1
}

dag = DAG(
    'print_var_from_form',
    concurrency=2,
    schedule_interval='30 * * * *',
    default_args=default_args,
    catchup=False
)

print_var_op = PythonOperator(
    task_id='print_var',
    provide_context=True,
    python_callable=print_var,
    dag=dag
)


start_op = DummyOperator(task_id='start', dag=dag)
end_op = DummyOperator(task_id='end', dag=dag)

start_op >> print_var_op >> end_op